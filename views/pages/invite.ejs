<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            height: 100vh;
            background-color: #F5F7F7;
        }
        .field {
            background-color: rgb(252, 252, 252);
            border-radius: 4px;
            border: 2px solid rgb(228, 234, 235);
            box-sizing: border-box;
            display: flex;
            height: 48px;
            outline: none;
            padding-left: 15px;
            padding-right: 15px;
            width: 80%;
            font-family: "Nunito Sans", sans-serif;
            font-weight: 400;
            letter-spacing: normal;
            color: rgb(39, 51, 57);
            font-size: 18px;
            line-height: 27px;
            margin: auto;
        }
        .inputAr {
            position: relative;
            height: max-content;
            background-color: white;
            margin: auto auto;
            border-radius: 10px;
            box-shadow: rgb(0 0 0 / 8%) 0px 1px 4px 0px;
            padding: 30px 20px 30px 20px;
            max-width: 420px;
            top: 50%;
            transform: translateY(-65%);
        }
        .btnn {
            cursor: pointer;
            position: relative;
            left: 50%;
            color: #fff;
            transform: translateX(-50%);
            width: 80%;
            background-color: rgb(55, 112, 255);
            outline: 0;
            border: 0;
            font-size: 20px;
            padding: 14px 10px;
            font-family: 'Inter', sans-serif;
            border-radius: 5px;
            margin-top: 10px;
        }
        h1 {
            margin: 0;
            font-family: 'Inter', sans-serif;
            color: #1d1d1d;
            text-align: center;
        }
        .err {
            color: #FF0909;
            font-size: 15px;
            text-align: center;
            margin: 3px;
            font-family: 'Inter';
        }
        @media only screen and (max-width: 600px) {
            .email {
                width: 100%;
            }
            .password {
                width: 100%;
            }
        }
    </style>
</head>
<body>

    <% if(valid == true && join == false) { %>
        <div class="inputAr">
            <h1 style="text-align: center;margin-bottom: 0px">You have been invited to <%= comm_name %></h1>
            <p class='err'>Invite ID: <%= invite %></p>
            <button class='btnn' id='join'>JOIN</button>
        </div>
    <% } %>
    <% if(valid == false) { %>
        <div class="inputAr">
            <h1 style="text-align: center;margin-bottom: 16px;">Invalid Community</h1>
            <p class="err"><%= message %></p>
        </div>
    <% } %>
    <% if(valid == true && join == true) { %>
        <div class="inputAr">
            <h1 style="text-align: center;margin-bottom: 8px;">Joined Community!</h1>
            <button class="btnn" onclick="window.open('http://localhost:8080/', '_self');">Go to Home</button>
        </div>
    <% } %>
<script>
    function getCook(cookiename) {
        var cookiestring=RegExp(cookiename+"=[^;]+").exec(document.cookie);
        return decodeURIComponent(!!cookiestring ? cookiestring.toString().replace(/^[^=]+./,"") : "");
    }

    if(getCook('comm_id')){
        window.alert('You are already in a community!');
        window.open('http://localhost:8080/', '_self');
    }

    const handleData = (obj) => {
        if(obj.status !== '200'){
            return window.alert(obj.message);
        }else{
            return window.alert(obj.message)
        }
    }

    document.querySelector('#join').onclick = () => {
        window.open(`${window.location.href}?join=true`, '_self')
    }
</script>
</body>
</html>