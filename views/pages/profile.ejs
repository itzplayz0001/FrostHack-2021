<script>
  function initialize(){
    console.log()
    document.querySelector('#covid_pos').value = `${Boolean(Number(document.querySelector('#covid_pos').classList[1]))}`;
    document.querySelector('#vaccinated').value = `${Boolean(Number(document.querySelector('#vaccinated').classList[1]))}`;
  }

  setTimeout(() => {
    initialize();
  }, 500)

  function updateProfile(){
      let name = document.querySelector('#name').value;
      let phone_no = document.querySelector('#phone_no').value;
      let vaccinated = document.querySelector('#vaccinated').value == 'true';
      let covid_pos = document.querySelector('#covid_pos').value == 'true';
      let password = document.querySelector('#password').value;
      if(password !== getCook('password')){
        document.cookie = "password=;expires=Thu, 01 Jan 1970 00:00:00 GMT";
        setCookie('password', password, 30)
      }
      console.log( Number(vaccinated), Number(covid_pos))
      fetch('http://localhost:8080/profile/submit', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({
          'name': name,
          'phone_no': phone_no,
          'vaccinated': Number(vaccinated),
          'covid_pos': Number(covid_pos),
          'password': password
        })
      })
      .then(d => d.json())
      .then(r => {
        if(r.status == 200){
          return window.alert(r.message);
        }else if(r.status = 400){
          return window.alert(r.message)
        }
      })
  }

  function logout(){
    var cookies = document.cookie.split(";");

    for (var i = 0; i < cookies.length; i++) {
        var cookie = cookies[i];
        var eqPos = cookie.indexOf("=");
        var name = eqPos > -1 ? cookie.substr(0, eqPos) : cookie;
        document.cookie = name + "=;expires=Thu, 01 Jan 1970 00:00:00 GMT";
    }
    window.open('http://localhost:8080/login', '_self')
  }

  function setCookie(cName, cValue, expDays) {
    let date = new Date();
    date.setTime(date.getTime() + (expDays * 24 * 60 * 60 * 1000));
    const expires = "expires=" + date.toUTCString();
    document.cookie = cName + "=" + cValue + "; " + expires + "; path=/";
  }

  function clearCookies(){
    var cookies = document.cookie.split(";");

    for (var i = 0; i < cookies.length; i++) {
        var cookie = cookies[i];
        var eqPos = cookie.indexOf("=");
        var name = eqPos > -1 ? cookie.substr(0, eqPos) : cookie;
        document.cookie = name + "=;expires=Thu, 01 Jan 1970 00:00:00 GMT";
    }
  }

  function getCook(cookiename) {
    var cookiestring=RegExp(cookiename+"=[^;]+").exec(document.cookie);
    return decodeURIComponent(!!cookiestring ? cookiestring.toString().replace(/^[^=]+./,"") : "");
  }
    
  if(document.cookie == '' && getCook('email_id') == ''){
    document.querySelector('#login-div').style.display = 'block';
  }else{
    document.querySelector('#logout-div').style.display = 'block';
    window.open('http://localhost:8080/')
  }
</script>
</body>
</html>